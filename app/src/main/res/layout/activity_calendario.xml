<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalendarioActivity">

    <CalendarView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/calendario"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="1.0" android:selectedWeekBackgroundColor="#FFFFFF"/>
    <Button
            android:text="@string/boton_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonCrearCita"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/calendario" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.060000002"
            android:background="@drawable/rounded_corners_orange_empty" android:textStyle="bold"
            android:textSize="18sp" android:padding="15dp"/>
    <Spinner
            android:layout_width="212dp"
            android:layout_height="20dp" android:id="@+id/spinner"
            app:layout_constraintTop_toBottomOf="@+id/calendario"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.65"/>
    <TextView
            android:text="@string/texto_cita_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/spinner" app:layout_constraintTop_toTopOf="@+id/spinner"
            android:textStyle="bold" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>